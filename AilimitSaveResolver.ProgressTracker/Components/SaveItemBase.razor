<div class="item">
    <div class="image" style="background-image: url(@ImageSrc)">
    </div>
    <div class="text">
        <div class="first">@FirstLine</div>
        <div class="second">@SecondLine</div>
    </div>
</div>

@code {
    [Parameter] public string ImageSrc { get; set; }
    [Parameter] public RenderFragment FirstLine { get; set; }
    [Parameter] public RenderFragment SecondLine { get; set; }
}
