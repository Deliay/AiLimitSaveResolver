@typeparam T
<img src="@(Icon(Data))" alt="item_icon"/>

<div class="description">
    <div class="name">@(FirstLine(Data))</div>
    <div class="level">@(SecondLine(Data))</div>
</div>

@code {
    [Parameter] public required T Data { get; set; }
    [Parameter] public required Func<T, string> Icon { get; set; }
    [Parameter] public required RenderFragment<T> FirstLine { get; set; }
    [Parameter] public required RenderFragment<T> SecondLine { get; set; }
}
